  {
  "name": "simplereact",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "simplereact/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/simplereact"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "simplereact:build"
      },
      "configurations": {
        "development": {
          "host": true,
          "buildTarget": "simplereact:build:development",
          "hmr": true
        },
        "production": {
          "host": true,
          "buildTarget": "simplereact:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": { "host": true, "buildTarget": "simplereact:build" },
      "configurations": {
        "development": {
          "buildTarget": "simplereact:build:development"
        },
        "production": {
          "buildTarget": "simplereact:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../coverage/simplereact"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["simplereact/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "simplereact:build"
      }
    }
  },
  "tags": []
}
